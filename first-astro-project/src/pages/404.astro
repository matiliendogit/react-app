---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Not Found">
  <div class="flex flex-col items-center justify-center min-h-screen px-6 py-24 mx-auto">
    <h1 class="text-9xl font-extrabold text-gray-400 dark:text-gray-600">404</h1>
    <p class="text-2xl font-semibold md:text-3xl">Sorry, we couldn't find this page.</p>
    <a href="/" class="mt-6 text-blue-600 hover:underline">Go back home</a>
  </div>
</Layout>