---
interface Props {
    id: string;
    img: string;
    success: boolean | null;
    flightNumbrer: number;
    details: string;
}

const { id, img, success, flightNumbrer, details } = Astro.props as Props;
const successText = success ? 'Success' : 'Failure';

---

<a
    href={`/launch/${id}`}
    class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:bg-gray-700 hover:sacle-105 hover:border-gray-500 flex flex-col p-8 m-8 transition duration-400 easy hover:scale-105"
>
    <picture class="flex justify-center p-4">
        <img class="mb-5 rounded-lg" src={img} alt={`Path for lounch ${id}`} />
    </picture>

    <header class="p-a flex-grow">
        <span
            class:list={[
                "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
                {
                    'bg-green-200 text-green-800': success,
                    'bg-red-200 text-red-800': !success,
                }
            ]}
        >{successText}</span>

        <h2 class="my-2 text-2xl font-bold tracking-tight text-with">
            Flight #{flightNumbrer}
        </h2>

        <p class="mb-4 font-light text-gray-400">
            {details ?.length > 100 ? details.slice(0, 100) + "..." : details}
        </p>
    </header>
</a>
