import type { ApiSpaceXResponse } from '../types/api';

const res = await fetch('https://api.spacexdata.com/v4/launches/query', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify({
    query: {},
    options: {
      limit: 12,
      sort: { date_unix: 'desc' },
      populate: ['rocket', 'payloads', 'launchpad'],
    },
  }),
});

const data = await res.json();

