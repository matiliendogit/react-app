---
import HeaderButton from './HeaderButton.astro';

const actualPage = Astro.url.pathname;
---

<header class="py-8 px-4 mx-auto max-h-full lg:py-16 lg:px-6 bg-gray-800 rounded-lg">
    <di class="mx-auto text-center mb-8 lg:mb:16">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-green-100">
            First Astro Project
        </h2>
        <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
            Learning the basics of Astro.
        </p>
    </div>
    <nav class="flex flex-col gap-3 justify-between w-full text-center md:flex-row md:justify-evenly text-gray-400 pt-5">
        <HeaderButton href="/contact" selected={actualPage === "/contact"}>Contact</HeaderButton>
        <HeaderButton href="/" selected={actualPage === "/"}>
            New Content 
            <svg  
                width="24"  
                height="24"  
                viewBox="0 0 24 24"  
                fill="none"  
                stroke="currentColor"  
                stroke-width="2"  
                stroke-linecap="round"  
                stroke-linejoin="round"  
                class="icon icon-tabler icons-tabler-outline icon-tabler-brand-astro">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M14.972 3.483c.163 .196 .247 .46 .413 .987l3.64 11.53a15.5 15.5 0 0 0 -4.352 -1.42l-2.37 -7.723a.31 .31 0 0 0 -.296 -.213a.31 .31 0 0 0 -.295 .214l-2.342 7.718a15.5 15.5 0 0 0 -4.37 1.422l3.657 -11.53c.168 -.527 .251 -.79 .415 -.986c.144 -.172 .331 -.306 .544 -.388c.242 -.094 .527 -.094 1.099 -.094h2.612c.572 0 .858 0 1.1 .094c.213 .082 .4 .217 .545 .39" /><path d="M9 18c0 1.5 2 3 3 4c1 -1 3 -3 3 -4q -3 1.5 -6 0" />
            </svg> 
        </HeaderButton>
        <HeaderButton href="/info" selected={actualPage === "/info"}>FAQs</HeaderButton>
    </nav>
</header>